                                <h4>{{ nom }}</h4>
                                <p class="text-muted">{{ libelle }}</p>
                            </div>
                            <div class="work_detail">
                                <hr/>
                                <div class="row">
                                    <div class="col-xs-6">
                                    </div>
                                    <div class="col-xs-6">
                                        <h2>{{ nom }}</h2>
                                        <p class="text-muted">{{ libelle }}</p>
                                        <p>{{ desc }}</p>
                                    </div>
                                </div>
                                <hr/>
                            </div>
                        </article>
                        {% endfor %}
                    </div>
                    <div class="row row_detail"></div>
                </div>
            </div>       
        </div>
    </section>
            
